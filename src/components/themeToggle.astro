<div>
  <!-- Botón minimalista para cambiar el tema -->
  <button
    id="theme-toggle"
    type="button"
    aria-label="Toggle dark mode"
    class="p-2 bg-gray-200 dark:bg-gray-700 rounded-full shadow-sm transition-colors duration-300 hover:bg-gray-300 dark:hover:bg-gray-600 focus:outline-hidden focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
  >
    <!-- Contenedor de iconos con posición relativa para sobreponer ambos SVG -->
    <span id="theme-icon" class="relative block w-6 h-6">
      <!-- Icono de sol: se muestra en light mode -->
      <svg
        id="sun-icon"
        xmlns="http://www.w3.org/2000/svg"
        class="absolute inset-0 h-6 w-6 transition-transform duration-300 ease-in-out transform dark:scale-0"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 3v2m0 14v2m9-9h-2M5 12H3m15.364-6.364l-1.414 1.414M7.05 16.95l-1.414 1.414m12.728 0l1.414-1.414M7.05 7.05L5.636 5.636M12 8a4 4 0 100 8 4 4 0 000-8z"
        ></path>
      </svg>
      <!-- Icono de luna: se muestra en dark mode -->
      <svg
        id="moon-icon"
        xmlns="http://www.w3.org/2000/svg"
        class="absolute inset-0 h-6 w-6 transition-transform duration-300 ease-in-out transform scale-0 dark:scale-100"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"></path>
      </svg>
    </span>
  </button>
</div>

<script is:inline>
  // Seleccionamos el botón y el elemento raíz (html)
  const themeToggleBtn = document.getElementById("theme-toggle");
  const htmlEl = document.documentElement;

  // Función para alternar el tema y guardar la preferencia en localStorage
  function toggleTheme() {
    const currentTheme = localStorage.getItem("theme");
    if (currentTheme === "dark") {
      localStorage.setItem("theme", "light");
      htmlEl.classList.remove("dark");
    } else {
      localStorage.setItem("theme", "dark");
      htmlEl.classList.add("dark");
    }
  }

  // Vinculamos el evento click al botón
  themeToggleBtn.addEventListener("click", toggleTheme);
</script>

<style is:global>
  /* Opcional: si deseas ajustar el esquema de colores en dark mode para elementos nativos */
  html.dark {
    color-scheme: dark;
  }
</style>
