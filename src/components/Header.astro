<header class="absolute left-0 right-0 mx-auto mt-3 w-full flex justify-center items-center">
  <nav class="hidden lg:block text-white/70 border-slate-500/20 border-2 backdrop-blur-xl p-4 rounded-full h-full w-[500px]">
    <ul class="flex justify-evenly">
      <li>
        <a href="/" class="hover:text-white">Inicio</a>
      </li>
      <li>
        <a href="/" class="hover:text-white">Trabajos</a>
      </li>
      <li>
        <a href="/about" class="hover:text-white">Sobre mi</a>
      </li>
      <li>
        <a href="/" class="hover:text-white">Contacto</a>
      </li>
    </ul>
  </nav>
  <div class="flex lg:hidden">
    <button type="button" id="open-menu-button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
      <span class="sr-only">Open main menu</span>
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
  </div>

  <div class="lg:hidden" id="menu" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-50"></div>
    <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto text-white/70 bg-white/10 border-slate-500/20 border-2 backdrop-blur-xl px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <a href="#" class="-m-1.5 p-1.5">
          <span class="sr-only">JDLSantos</span>
          <img class="h-8 w-auto" src="/assets/profile.webp" alt="">
        </a>
        <button type="button" id="close-menu-button" class="-m-2.5 rounded-md p-2.5">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <a href="/" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7">Inicio</a>
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7">Trabajos</a>
            <a href="/about" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7">Sobre mí</a>
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7">Contacto</a>
          </div>
          <div class="py-6">
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7">✉️</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  
</header>
