---
// src/components/SkeletonCard.astro
---

<div
  class="skeleton-card absolute h-full w-full border rounded-lg overflow-hidden z-20 bg-slate-300"
>
  <div class="w-full aspect-video bg-gray-200 animate-pulse"></div>

  <div class="p-4 space-y-3 animate-pulse">
    <div class="h-6 bg-gray-200 rounded w-3/4"></div>
    <div class="space-y-2">
      <div class="h-4 bg-gray-200 rounded"></div>
      <div class="h-4 bg-gray-200 rounded w-5/6"></div>
      <div class="h-4 bg-gray-200 rounded w-1/2"></div>
    </div>
    <div class="flex flex-wrap gap-2">
      <div class="h-6 w-16 bg-gray-200 rounded-full"></div>
      <div class="h-6 w-20 bg-gray-200 rounded-full"></div>
    </div>
  </div>
</div>

<style>
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  /* Opcional: Efecto de shimmer m√°s avanzado */
  .shimmer {
    position: relative;
    overflow: hidden;
  }

  .shimmer::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.4) 50%,
      transparent 100%
    );
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
</style>
