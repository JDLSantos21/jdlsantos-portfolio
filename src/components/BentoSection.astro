---
import {
  Mail,
  Linkedin,
  University,
  Calendar,
  CheckCircle,
} from "lucide-react";
import { Icon } from "astro-icon/components";
import { skillsData } from "@/data/skills";
---

<div
  id="bento-container"
  class="bento-section grid max-w-6xl grid-cols-1 gap-6 p-6 mx-auto md:grid-cols-3"
>
  <!-- Sobre Mí -->
  <a href="/about" class="block col-span-2" data-card-color="blue">
    <div
      transition:name="about-me-container"
      class="about-card bento-card section h-full p-6 lg:p-8 rounded-3xl shadow-xl relative overflow-hidden bg-gradient-to-br from-blue-50 via-blue-100/40 to-indigo-100/50 dark:from-slate-900/95 dark:via-blue-950/30 dark:to-indigo-950/20 backdrop-blur hover:shadow-blue-200/40 dark:hover:shadow-blue-900/30 hover:scale-[1.02] transition-all duration-300"
    >
      <!-- Gradient blob en el fondo -->
      <div
        class="blob-blue absolute -top-20 -right-20 w-64 h-64 rounded-full bg-blue-300/20 dark:bg-blue-500/10 blur-3xl"
      >
      </div>
      <div
        class="blob-blue-alt absolute -bottom-20 -left-20 w-40 h-40 rounded-full bg-indigo-300/15 dark:bg-indigo-500/10 blur-3xl"
      >
      </div>

      <div class="relative z-10 flex items-start justify-between mb-6">
        <h2
          class="card-title flex items-center text-xl font-bold text-gray-800 lg:text-2xl dark:text-blue-200"
        >
          <div
            class="p-2 lg:p-3 mr-3 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl shadow-lg text-card-icon"
          >
            <Icon
              name="mdi:user-outline"
              class="w-6 h-6 lg:w-7 lg:h-7 text-white"
            />
          </div>
          Sobre Mí
        </h2>
        <div
          class="profile-img-container overflow-hidden rounded-full border-4 border-white dark:border-blue-900/40 shadow-2xl"
        >
          <img
            src="/assets/profile.webp"
            alt="Foto de perfil"
            class="w-16 h-16 lg:w-20 lg:h-20 profile-photo"
          />
        </div>
      </div>
      <p
        class="card-content text-sm leading-relaxed text-gray-700 dark:text-gray-300 mb-6 relative z-10"
      >
        +3 Años de experiencia.<span class="text-blue-500">
          Desarrollador de Software con sólida formación en Ingeniería de
          Software
        </span> y experiencia liderando proyectos tecnológicos. He diseñado y desarrollado
        soluciones web, escritorio y móviles para optimizar procesos empresariales.
        Apasionado por la innovación, con dominio de tecnologías modernas como TypeScript,
        React, Node.js, PostgreSQL y más.
      </p>
      <div class="card-action relative z-10 flex justify-end">
        <span
          class="text-sm font-medium text-blue-600 dark:text-blue-300 flex items-center px-4 py-2 rounded-full bg-gradient-to-r from-blue-50 to-blue-100/70 dark:from-blue-900/20 dark:to-blue-800/10 shadow-sm"
        >
          Conoce más sobre mí
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="arrow-icon w-5 h-5 ml-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </span>
      </div>
    </div>
  </a>

  <!-- Disponibilidad y Estado -->
  <div
    class="availability-card md:row-start-2 md:col-start-1 section flex flex-col p-6 lg:p-7 rounded-3xl shadow-xl relative overflow-hidden bg-gradient-to-br from-emerald-50 via-green-50/40 to-teal-50/30 dark:from-gray-900 dark:via-emerald-950/40 dark:to-teal-950/20 backdrop-blur bento-card hover:shadow-emerald-200/40 dark:hover:shadow-emerald-900/30 hover:scale-[1.02] transition-all duration-300"
    data-card-color="green"
    data-card-delay="0.2"
  >
    <!-- Gradient blob en el fondo -->
    <div
      class="blob-green absolute -top-20 -left-20 w-64 h-64 rounded-full bg-emerald-300/15 dark:bg-emerald-600/8 blur-3xl"
    >
    </div>

    <!-- Contenido principal sin overlap con avatar -->
    <div class="relative z-10 flex flex-col h-full w-full">
      <h2
        class="card-title flex items-center mb-6 text-xl font-bold text-gray-800 lg:text-2xl dark:text-emerald-200"
      >
        <div
          class="p-2.5 mr-3 bg-gradient-to-br from-emerald-500 to-emerald-600 dark:from-emerald-600 dark:to-emerald-700 rounded-xl shadow-lg text-card-icon"
        >
          <Icon
            name="mdi:checkbox-marked-circle-outline"
            class="h-5 w-5 text-white"
          />
        </div>
        <span>Estado</span>
      </h2>

      <!-- Estado de Disponibilidad principal -->
      <div class="mb-6">
        <div
          class="flex items-center gap-3 p-2 rounded-xl bg-white/40 dark:bg-gray-800/20 backdrop-blur-sm shadow-sm"
        >
          <div
            class="w-3 h-3 bg-emerald-500 rounded-full animate-pulse shadow-sm"
          >
          </div>
          <div>
            <p
              class="font-semibold text-emerald-700 dark:text-emerald-300 text-sm"
            >
              Disponible para proyectos
            </p>
            <p class="text-xs text-gray-600 dark:text-gray-400 mt-0.5">
              Tiempo completo • Remoto • Presencial
            </p>
          </div>
        </div>
      </div>

      <!-- Estadísticas minimalistas -->
      <div class="space-y-4">
        <div
          class="flex items-center justify-between p-1 rounded-lg bg-white/30 dark:bg-gray-800/15 backdrop-blur-sm"
        >
          <span class="text-sm text-gray-600 dark:text-gray-400"
            >Experiencia</span
          >
          <span class="font-bold text-sm text-gray-800 dark:text-gray-100"
            >3+ años</span
          >
        </div>

        <div
          class="flex items-center justify-between p-1 rounded-lg bg-white/30 dark:bg-gray-800/15 backdrop-blur-sm"
        >
          <span class="text-sm text-gray-600 dark:text-gray-400">Ubicación</span
          >
          <span class="font-bold text-sm text-gray-800 dark:text-gray-100"
            >Rep. Dominicana</span
          >
        </div>
      </div>

      <!-- Call to Action minimalista -->
      <div
        class="mt-6"
        transition:name="page-main-container"
        transition:animate="none"
      >
        <a
          href="/contact"
          class="block text-center py-2 px-2 rounded-xl bg-emerald-500 hover:bg-emerald-600 dark:bg-emerald-600 dark:hover:bg-emerald-700 text-white font-medium text-sm transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          ¡Trabajemos juntos!
        </a>
      </div>
    </div>

    <!-- Avatar posicionado a la izquierda sin interferir -->
    <!-- <img
      class="availability-avatar absolute bottom-0 left-0 w-32 h-32 lg:w-36 lg:h-36 opacity-70 pointer-events-none"
      src="/assets/avatar/hi.webp"
      alt="Avatar disponible"
    /> -->
  </div>

  <!-- Stack Section -->
  <div
    class="skills-card section p-6 lg:p-7 max-md:h-[36rem] flex flex-col rounded-3xl shadow-xl col-span-2 md:row-span-2 md:row-start-1 md:col-start-3 relative overflow-hidden bg-gradient-to-br from-violet-50 via-purple-50/40 to-indigo-50/30 dark:from-gray-900 dark:via-violet-950/30 dark:to-indigo-950/20 backdrop-blur bento-card hover:shadow-violet-200/40 dark:hover:shadow-violet-900/30 hover:scale-[1.02] transition-all duration-300"
    data-card-color="purple"
    data-card-delay="0.4"
  >
    <!-- Gradient blob en el fondo -->
    <div
      class="blob-purple absolute -bottom-20 -right-20 w-64 h-64 rounded-full bg-violet-300/10 dark:bg-violet-600/5 blur-3xl"
    >
    </div>

    <div class="relative z-10 flex flex-col h-full w-full">
      <!-- Título minimalista -->
      <h2
        class="card-title relative z-10 flex items-center mb-6 text-xl font-bold text-gray-800 lg:text-2xl dark:text-violet-200"
      >
        <div
          class="p-2.5 mr-3 bg-gradient-to-br from-violet-500 to-violet-600 dark:from-violet-600 dark:to-violet-700 rounded-xl shadow-lg text-card-icon"
        >
          <Icon name="mdi:code-tags" class="h-5 w-5 text-white" />
        </div>
        Stack Principal
      </h2>

      <!-- Stack highlights compacto -->
      <div class="relative z-10 space-y-4">
        <!-- Frontend Stack -->
        <div class="space-y-2">
          <h4
            class="text-xs font-semibold text-violet-700 dark:text-violet-300 uppercase tracking-wide"
          >
            Frontend
          </h4>
          <div class="grid grid-cols-2 gap-2">
            {
              ["TypeScript", "React", "NextJS", "Tailwind"].map((skill) => {
                const skillInfo = skillsData[skill];
                return skillInfo ? (
                  <div class="flex items-center gap-2 p-2 rounded-lg bg-white/40 dark:bg-gray-800/20 backdrop-blur-sm border border-white/20 dark:border-gray-700/30 hover:bg-white/60 dark:hover:bg-gray-800/40 transition-all duration-200">
                    <Icon name={skillInfo.icon} class="w-4 h-4 flex-shrink-0" />
                    <span class="text-xs font-medium text-gray-700 dark:text-gray-300 truncate">
                      {skill}
                    </span>
                  </div>
                ) : null;
              })
            }
          </div>
        </div>

        <!-- Backend Stack -->
        <div class="space-y-2">
          <h4
            class="text-xs font-semibold text-violet-700 dark:text-violet-300 uppercase tracking-wide"
          >
            Backend
          </h4>
          <div class="grid grid-cols-2 gap-2">
            {
              ["Node.js", "Express", "MySQL", "PostgreSQL"].map((skill) => {
                const skillInfo = skillsData[skill];
                return skillInfo ? (
                  <div class="flex items-center gap-2 p-2 rounded-lg bg-white/40 dark:bg-gray-800/20 backdrop-blur-sm border border-white/20 dark:border-gray-700/30 hover:bg-white/60 dark:hover:bg-gray-800/40 transition-all duration-200">
                    <Icon name={skillInfo.icon} class="w-4 h-4 flex-shrink-0" />
                    <span class="text-xs font-medium text-gray-700 dark:text-gray-300 truncate">
                      {skill}
                    </span>
                  </div>
                ) : null;
              })
            }
          </div>
        </div>

        <!-- Tools -->
        <div class="space-y-2">
          <h4
            class="text-xs font-semibold text-violet-700 dark:text-violet-300 uppercase tracking-wide"
          >
            Herramientas
          </h4>
          <div class="grid grid-cols-2 gap-2">
            {
              ["Git", "Postman", "Vitest", "Playwight"].map((skill) => {
                const skillInfo = skillsData[skill];
                return skillInfo ? (
                  <div class="flex items-center gap-2 p-2 rounded-lg bg-white/40 dark:bg-gray-800/20 backdrop-blur-sm border border-white/20 dark:border-gray-700/30 hover:bg-white/60 dark:hover:bg-gray-800/40 transition-all duration-200">
                    <Icon name={skillInfo.icon} class="w-4 h-4 flex-shrink-0" />
                    <span class="text-xs font-medium text-gray-700 dark:text-gray-300 truncate">
                      {skill}
                    </span>
                  </div>
                ) : null;
              })
            }
          </div>
        </div>

        <!-- Stack completo indicator -->
        <div class="text-center pt-2">
          <div
            class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-violet-50 dark:bg-violet-950/30 border border-violet-200/50 dark:border-violet-800/50"
          >
            <div class="w-2 h-2 bg-violet-500 rounded-full"></div>
            <span
              class="text-xs font-medium text-violet-700 dark:text-violet-300"
            >
              Desarrollo Full-Stack moderno
            </span>
          </div>
        </div>
      </div>
    </div>
    <!-- Avatar posicionado a la izquierda sin interferir -->
    <img
      class="availability-avatar absolute bottom-0 left-0 w-32 h-32 lg:w-36 lg:h-36 opacity-70 pointer-events-none"
      src="/assets/avatar/whi.webp"
      alt="Avatar disponible"
    />
  </div>

  <!-- Educación  -->
  <div
    class="education-card section p-6 lg:p-7 rounded-3xl shadow-xl md:col-start-2 md:row-start-2 relative overflow-hidden bg-gradient-to-br from-slate-50 via-gray-50/50 to-blue-50/30 dark:from-gray-900 dark:via-slate-950/80 dark:to-gray-900 backdrop-blur bento-card hover:shadow-slate-200/40 dark:hover:shadow-slate-900/30 hover:scale-[1.02] transition-all duration-300"
    data-card-color="amber"
    data-card-delay="0.6"
  >
    <!-- Gradient blob en el fondo -->
    <div
      class="blob-amber absolute -top-20 -right-20 w-64 h-64 rounded-full bg-slate-300/10 dark:bg-slate-600/5 blur-3xl"
    >
    </div>

    <h2
      class="card-title relative z-10 flex items-center mb-6 text-xl font-bold text-gray-800 lg:text-2xl dark:text-slate-200"
    >
      <div
        class="p-2.5 mr-3 bg-gradient-to-br from-slate-600 to-slate-700 dark:from-slate-700 dark:to-slate-800 rounded-xl shadow-lg text-card-icon"
      >
        <Icon name="mdi:academic-cap-outline" class="h-5 w-5 text-white" />
      </div>
      Educación
    </h2>

    <!-- Contenido principal sin fondo blanco -->
    <div class="card-content relative z-10 space-y-4">
      <!-- Título de la carrera -->
      <div class="mb-4">
        <h3
          class="font-bold text-lg text-slate-800 dark:text-slate-100 leading-tight"
        >
          Ingeniería de Software
        </h3>
        <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">
          Título Universitario
        </p>
      </div>

      <!-- Información de la universidad -->
      <div class="space-y-3">
        <div class="flex items-center gap-3">
          <div
            class="flex-shrink-0 w-8 h-8 bg-slate-100 dark:bg-slate-800/50 rounded-lg flex items-center justify-center"
          >
            <University
              className="w-4 h-4 text-slate-600 dark:text-slate-400"
            />
          </div>
          <div>
            <p class="text-sm font-medium text-slate-700 dark:text-slate-300">
              Universidad APEC
            </p>
            <p class="text-xs text-slate-500 dark:text-slate-500">
              Santo Domingo, RD
            </p>
          </div>
        </div>

        <div class="flex items-center gap-3">
          <div
            class="flex-shrink-0 w-8 h-8 bg-slate-100 dark:bg-slate-800/50 rounded-lg flex items-center justify-center"
          >
            <Calendar className="w-4 h-4 text-slate-600 dark:text-slate-400" />
          </div>
          <div>
            <p class="text-sm font-medium text-slate-700 dark:text-slate-300">
              Enero 2020 - Diciembre 2024
            </p>
            <p class="text-xs text-slate-500 dark:text-slate-500">
              5 años de duración
            </p>
          </div>
        </div>
      </div>

      <!-- Badge de estado -->
      <div class="pt-2">
        <span
          class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-300"
        >
          <CheckCircle className="w-3 h-3 mr-1" />
          Completado
        </span>
      </div>
    </div>
  </div>

  <!-- Contacto -->
  <div
    class="contact-card section p-5 lg:p-6 rounded-3xl shadow-xl col-span-2 md:col-span-2 md:row-start-3 relative overflow-hidden bg-gradient-to-br from-cyan-50 via-sky-50/40 to-blue-50/30 dark:from-gray-900 dark:via-cyan-950/20 dark:to-blue-950/10 backdrop-blur bento-card hover:shadow-cyan-200/40 dark:hover:shadow-cyan-900/30 hover:scale-[1.01] transition-all duration-300"
    data-card-color="red"
    data-card-delay="0.8"
  >
    <!-- Gradient blob en el fondo -->
    <div
      class="blob-red absolute -bottom-20 -left-20 w-64 h-64 rounded-full bg-cyan-300/15 dark:bg-cyan-600/8 blur-3xl"
    >
    </div>

    <h2
      class="card-title relative z-10 flex items-center mb-4 text-xl font-bold text-gray-800 lg:text-2xl dark:text-cyan-200"
    >
      <div
        class="p-2 mr-3 bg-gradient-to-br from-cyan-600 to-cyan-700 dark:from-cyan-700 dark:to-cyan-800 rounded-xl shadow-lg text-card-icon"
      >
        <Icon name="mdi:phone-outline" class="h-5 w-5 text-white" />
      </div>
      Contacto
    </h2>

    <!-- Enlaces compactos en horizontal -->
    <div class="relative z-10 grid grid-cols-1 md:grid-cols-3 gap-3">
      <a
        href="mailto:JDLSantos21@hotmail.com"
        class="contact-item flex items-center gap-3 p-3 rounded-lg bg-white/30 dark:bg-gray-800/20 backdrop-blur-sm hover:bg-white/50 dark:hover:bg-gray-800/30 transition-all duration-300 hover:scale-[1.02] shadow-sm hover:shadow-md group"
      >
        <div
          class="flex-shrink-0 w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center shadow-sm"
        >
          <Mail className="w-4 h-4 text-white" />
        </div>
        <div class="flex-1 min-w-0">
          <p
            class="font-medium text-sm text-gray-800 dark:text-gray-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
          >
            Email
          </p>
        </div>
      </a>

      <a
        href="https://github.com/jdlsantos21"
        target="_blank"
        rel="noopener noreferrer"
        class="contact-item flex items-center gap-3 p-3 rounded-lg bg-white/30 dark:bg-gray-800/20 backdrop-blur-sm hover:bg-white/50 dark:hover:bg-gray-800/30 transition-all duration-300 hover:scale-[1.02] shadow-sm hover:shadow-md group"
      >
        <div
          class="flex-shrink-0 w-8 h-8 bg-gradient-to-br from-gray-700 to-gray-800 rounded-lg flex items-center justify-center shadow-sm"
        >
          <Icon name="social/github" class="w-4 h-4 text-white" />
        </div>
        <div class="flex-1 min-w-0">
          <p
            class="font-medium text-sm text-gray-800 dark:text-gray-200 group-hover:text-gray-700 dark:group-hover:text-gray-300 transition-colors"
          >
            GitHub
          </p>
        </div>
      </a>

      <a
        href="https://www.linkedin.com/in/jose-armando-de-los-santos-amadis-689b091b7/"
        target="_blank"
        rel="noopener noreferrer"
        class="contact-item flex items-center gap-3 p-3 rounded-lg bg-white/30 dark:bg-gray-800/20 backdrop-blur-sm hover:bg-white/50 dark:hover:bg-gray-800/30 transition-all duration-300 hover:scale-[1.02] shadow-sm hover:shadow-md group"
      >
        <div
          class="flex-shrink-0 w-8 h-8 bg-gradient-to-br from-blue-600 to-blue-700 rounded-lg flex items-center justify-center shadow-sm"
        >
          <Linkedin className="w-4 h-4 text-white" />
        </div>
        <div class="flex-1 min-w-0">
          <p
            class="font-medium text-sm text-gray-800 dark:text-gray-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
          >
            LinkedIn
          </p>
        </div>
      </a>
    </div>
  </div>

  <!-- Estadísticas de Proyectos -->
  <div
    class="stats-card col-span-2 md:col-start-3 md:row-start-3 md:row-end-4 overflow-hidden p-5 rounded-3xl bg-gradient-to-br from-indigo-50 via-purple-50/30 to-slate-100/20 dark:from-gray-900 dark:via-indigo-950/20 dark:to-gray-900 backdrop-blur bento-card shadow-xl hover:shadow-indigo-200/40 dark:hover:shadow-indigo-900/30 hover:scale-[1.02] transition-all duration-300"
    data-card-color="purple"
    data-card-delay="1.2"
  >
    <!-- Gradient blob en el fondo -->
    <div
      class="blob-purple absolute -top-20 -right-20 w-64 h-64 rounded-full bg-indigo-300/8 dark:bg-indigo-600/4 blur-3xl"
    >
    </div>

    <h2
      class="card-title relative z-10 flex items-center mb-4 text-xl font-bold text-gray-800 lg:text-2xl dark:text-indigo-200"
    >
      <div
        class="p-2.5 mr-3 bg-gradient-to-br from-indigo-500 to-indigo-600 dark:from-indigo-600 dark:to-indigo-700 rounded-xl shadow-lg"
      >
        <Icon name="mdi:stack-overflow" class="h-5 w-5 text-white" />
      </div>
      Proyectos
    </h2>

    <!-- Estadística principal -->
    <div class="relative z-10 text-center">
      <div class="mb-2">
        <span class="text-4xl font-black text-indigo-600 dark:text-indigo-400"
          >15+</span
        >
      </div>
      <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
        Proyectos completados
      </p>

      <a
        href="/projects"
        class="inline-flex items-center text-sm font-medium text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 dark:hover:text-indigo-300 transition-colors group"
      >
        Ver todos
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</div>

<script src="../utils/animations/bentoAnimations.ts"></script>

<style>
  @media (max-width: 768px) {
    #bento-container {
      grid-template-columns: 1fr;
      grid-template-rows: auto auto auto auto auto auto;
    }

    /* En mobile, Skills y Education ocupan filas separadas */
    .availability-card {
      grid-column: 1;
      grid-row: auto;
    }

    .education-card {
      grid-column: 1;
      grid-row: auto;
    }
  }
</style>
