---
import {
  GraduationCap,
  User,
  Code,
  Briefcase,
  Phone,
  Mail,
  Linkedin,
  Github,
} from "lucide-react";
import { SkillsCarousel } from "./SkillsCarousel";
import { projects } from "@/mocks/projects";
---

<div
  class="lg:h-screen grid grid-cols-1 md:grid-cols-3 gap-4 p-10 max-w-6xl mx-auto"
>
  <!-- Sobre Mí -->
  <a href="/about" class="block col-span-2">
    <div
      class="bg-white dark:bg-[--bento-card-bg] h-full p-8 rounded-2xl shadow-md dark:shadow-blue-700 shadow-blue-100 hover:shadow-blue-400 hover:shadow-2xl transition-all duration-300 relative overflow-hidden group"
    >
      <div
        class="absolute top-0 right-0 w-1/2 h-1/2 bg-gradient-to-bl from-blue-100 dark:from-blue-800 to-transparent rounded-bl-[100px] transition-all duration-300 group-hover:scale-110"
      >
      </div>
      <div class="flex items-start justify-between mb-6 relative z-10">
        <h2
          class="text-3xl about-me-title font-bold text-blue-400 dark:text-white flex items-center"
        >
          <div class="bg-blue-600 rounded-sm p-2 mr-3">
            <User className="w-8 h-8 text-white" />
          </div>
          Sobre Mí
        </h2>
        <img
          src="/assets/profile.webp"
          alt="Foto de perfil"
          class="profile-photo w-20 h-20 rounded-full border-4 border-white dark:border-gray-300 shadow-md transition-transform duration-300 group-hover:scale-105"
        />
      </div>
      <p
        class="text-lg leading-relaxed text-[--bento-card-description-color] mb-6 relative z-10"
      >
        Soy un desarrollador web apasionado por crear experiencias digitales
        únicas y funcionales. Con experiencia en React, Node.js y diseño UX/UI,
        me esfuerzo por combinar creatividad y tecnología en cada proyecto.
      </p>
      <div class="flex justify-end relative z-10">
        <span class="text-sm text-primary font-medium group-hover:underline">
          Conoce más sobre mí
        </span>
      </div>
    </div>
  </a>

  <!-- Proyectos -->
  <div
    transition:name="projects-container"
    class="bg-[--bento-card-bg] flex flex-col justify-between p-8 rounded-2xl max-md:col-span-2 shadow-md dark:shadow-green-700 shadow-green-100 hover:shadow-green-400 hover:shadow-2xl transition-all duration-300 md:row-span-2 relative overflow-hidden group"
  >
    <div
      class="absolute top-0 left-0 w-1/2 h-1/2 bg-gradient-to-br from-green-100 dark:from-green-800 to-transparent rounded-tr-[100px] transition-all duration-300 group-hover:scale-110"
    >
    </div>
    <h2
      transition:name="projects-title"
      class="text-3xl font-bold text-green-600 dark:text-white-400 mb-6 flex items-center relative z-10"
    >
      <div class="bg-green-600 rounded-sm p-2 mr-3">
        <Briefcase className="w-8 h-8 text-white" />
      </div>
      <span class="dark:text-white text-green-600">Proyectos</span>
    </h2>
    <div class="grid grid-cols-1 gap-6 relative z-10">
      {
        projects.slice(0, 3).map((project) => (
          <a
            href={`/projects/${project.slug}`}
            class="flex items-center text-lg text-gray-600 hover:text-green-600 dark:hover:text-green-500 dark:text-white hover:scale-105 transition-all duration-600"
          >
            <div
              transition:name={`${project.slug}-container`}
              transition:animate="initial"
            >
              <span class="font-bold" transition:name={`${project.slug}-title`}>
                {project.title}
              </span>
              <p
                class="text-[--bento-card-description-color] mb-2"
                transition:name={`project-description-${project.id}`}
              >
                {project.shortDescription}
              </p>
              {project.skills.map((tag) => (
                <span class="mr-2 text-sm text-gray-400 dark:text-white dark:bg-green-500 bg-gray-100 px-2 py-1 rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          </a>
        ))
      }
    </div>
    <a
      href="/projects"
      class="text-center max-lg:mt-10 text-sm text-primary font-medium group-hover:underline"
      >Ver más proyectos</a
    >
  </div>

  {/* Skills */}
  <div
    class="bg-[--bento-card-bg] shadow-md dark:shadow-purple-700 shadow-purple-100 hover:shadow-purple-400 hover:shadow-2xl p-8 flex flex-col items-center rounded-2xl max-md:col-span-2 transition-all duration-300 relative overflow-hidden group"
  >
    <div
      class="absolute bottom-0 right-0 w-2/3 h-1/4 bg-gradient-to-tl from-purple-100 to-transparent rounded-tl-[100px] transition-all duration-300 group-hover:scale-110"
    >
    </div>

    {/* Título con self-start para alinearlo al inicio */}
    <h2
      class="text-3xl font-bold mb-4 flex items-center relative z-10 self-start"
    >
      <div class="bg-purple-600 rounded-sm p-2 mr-3">
        <Code className="w-8 h-8 text-white" />
      </div>
      Skills
    </h2>

    {/* Carrusel centrado */}
    <SkillsCarousel client:load />
  </div>

  {/* Educación */}
  <div
    class="bg-[--bento-card-bg] shadow-md dark:shadow-yellow-700 shadow-yellow-100 hover:shadow-yellow-400 hover:shadow-2xl p-8 rounded-2xl max-md:col-span-2 transition-all duration-300 relative overflow-hidden group"
  >
    <div
      class="absolute top-0 right-0 w-1/2 h-1/2 bg-gradient-to-bl from-yellow-100 dark:from-yellow-800 to-transparent rounded-bl-[100px] transition-all duration-300 group-hover:scale-110"
    >
    </div>
    <h2 class="text-3xl font-bold mb-4 flex items-center relative z-10">
      <div class="bg-yellow-600 rounded-sm p-2 mr-3">
        <GraduationCap className="w-8 h-8 text-white" />
      </div>
      Educación
    </h2>
    <p
      class="text-lg leading-relaxed text-[--bento-card-description-color] relative z-10"
    >
      Ingeniería en Sistemas Computacionales - Universidad XYZ
    </p>
  </div>

  {/* Contacto */}
  <div
    class="bg-[--bento-card-bg] shadow-md dark:shadow-red-700 shadow-red-100 hover:shadow-red-400 hover:shadow-2xl p-8 rounded-2xl transition-all duration-300 col-span-2 md:col-span-3 relative overflow-hidden group"
  >
    <div
      class="absolute bottom-0 left-0 w-1/3 h-1/3 bg-gradient-to-tr from-red-100 dark:from-red-800 to-transparent rounded-tr-[100px] transition-all duration-300 group-hover:scale-110"
    >
    </div>
    <h2
      class="text-3xl font-bold text-red-600 dark:text-white mb-6 flex items-center relative z-10"
    >
      <div class="bg-red-600 rounded-sm p-2 mr-3">
        <Phone className="w-8 h-8 text-white" />
      </div>
      Contacto
    </h2>
    <div
      class="text-[--bento-card-description-color] flex flex-wrap gap-6 relative z-10"
    >
      <a
        href="mailto:tu@email.com"
        class="flex items-center text-lg hover:text-red-600 transition-colors"
      >
        <Mail className="w-6 h-6 mr-2" /> tu@email.com
      </a>
      <a
        href="https://github.com/tuusuario"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center text-lg hover:text-red-600 transition-colors"
      >
        <Github className="w-6 h-6 mr-2" /> GitHub
      </a>
      <a
        href="https://linkedin.com/in/tuusuario"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center text-lg hover:text-red-600 transition-colors"
      >
        <Linkedin className="w-6 h-6 mr-2" /> LinkedIn
      </a>
    </div>
  </div>
</div>
