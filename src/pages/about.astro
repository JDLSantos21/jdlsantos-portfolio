---
import Layout from "@layouts/Layout.astro"
import { User } from "lucide-react"
import AboutMe from "@components/AboutMe"
const icons = ['üöÄ', 'üåà', 'üî•', 'üíé', '‚ú®', 'üéâ', 'üì±', 'üíª'];
const randomDuration = () => `${Math.random() * 5 + 3}s`;

---


<Layout title="About me - JDLSantos">
  <div class="absolute h-screen w-screen overflow-hidden">
    {icons.map((emoji) => {
      // Genera posiciones y duraci√≥n aleatoria
      const top = Math.random() * 100;
      const left = Math.random() * 100;
      const translateX = (Math.random() - 0.5) * 100; // Random x translation
      const translateY = (Math.random() - 0.5) * 100; // Random y translation
  
      return (
        <span
          class="floating-icon"
          style={`top: ${top}vh; left: ${left}vw; --x: ${translateX}px; --y: ${translateY}px; animation-duration: ${randomDuration()};`}
        >
          {emoji}
        </span>
      );
    })}
  </div>
  <AboutMe client:load>
</Layout>


<style>
  .floating-icon {
    position: absolute;
    font-size: 2rem;
    animation: float 10s ease-in-out infinite;
    opacity: 0.8;
  }

  @keyframes float {
    0% {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    50% {
      transform: translate(var(--x), var(--y)) rotate(360deg) scale(1.2);
    }
    100% {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
  }

</style>