---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Contacto - JDLSantos">
  <section class="max-w-lg mx-auto px-6 py-12 space-y-6">
    <h1
      class="text-4xl font-semibold text-gray-900 dark:text-white text-center"
    >
      Contáctame
    </h1>
    <p class="text-center text-gray-600 dark:text-gray-400">
      Estoy disponible para proyectos y colaboraciones. ¡Déjame tu mensaje!
    </p>

    <form class="space-y-5">
      <!-- Nombre -->
      <div>
        <label for="name" class="sr-only">Nombre</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          placeholder="Tu nombre"
          class="w-full p-3 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white
                 border border-gray-300 dark:border-gray-700 focus:ring-2 focus:ring-blue-500
                 focus:outline-none transition-all duration-300"
        />
      </div>

      <!-- Correo -->
      <div>
        <label for="email" class="sr-only">Correo</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          placeholder="Tu correo"
          class="w-full p-3 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white
                 border border-gray-300 dark:border-gray-700 focus:ring-2 focus:ring-blue-500
                 focus:outline-none transition-all duration-300"
        />
      </div>

      <!-- Mensaje -->
      <div>
        <label for="message" class="sr-only">Mensaje</label>
        <textarea
          id="message"
          name="message"
          required
          placeholder="Escribe tu mensaje..."
          class="w-full p-3 h-28 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white
                 border border-gray-300 dark:border-gray-700 focus:ring-2 focus:ring-blue-500
                 focus:outline-none transition-all duration-300 resize-none"
        ></textarea>
      </div>

      <!-- Botón Enviar -->
      <button
        type="submit"
        class="w-full py-3 text-white bg-blue-600 dark:bg-blue-700 rounded-md
               font-medium text-lg hover:bg-blue-700 dark:hover:bg-blue-600
               transition-all duration-300 focus:ring-2 focus:ring-blue-500"
      >
        Enviar
      </button>
    </form>
  </section>
</Layout>
