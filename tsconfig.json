{
  "include": [".astro/types.d.ts", "**/*", "prettier.config.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@libs/*": ["src/libs/*"],
      "/*": ["./public/*", "./*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
